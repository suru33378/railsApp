<h1><%= @address.town %></h1>
<%= link_to 'Edit', edit_address_path(@address) %>
<p><b>Door No:</b> <%= @address.doorno %></p>
<p><b>Town:</b> <%= @address.town %></p>
<p><b>District:</b> <%= @address.district %></p>
<p><b>State:</b> <%= @address.state %></p>


<h4>User: <%= link_to @address.user.name, user_path(@address.user) %></h4>

<p><%= link_to 'Delete', @address, method: 'delete', data: { confirm: 'Are you sure?' }%></p>
<p><%= link_to 'Go back to all addresses', addresses_path %></p>
